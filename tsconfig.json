{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ]
}